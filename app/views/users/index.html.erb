<h1>全ユーザー</h1>
<div class= "row" >
  <div class="col-12">
    <div class="card-columns">
      <% @users.each do |user| %>
        <div class="card">
            <% if user.image.attached?%>
              <%= image_tag user.image, class: "w-100", height: "350px" %>
            <% else %>
              <%= image_tag "no_image.jpg", class: "w-100", height: "350px" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <p>ユーザー名</p>
                <span>
                  <%= link_to user.name, user_path(user.id) %></h5>
                </span>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to '戻る', root_path %>