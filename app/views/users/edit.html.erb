<h1>編集画面</h1>

<%= form_with model: @user do |f| %>

  <h4>画像</h4>
  <%= f.file_field :image %>

  <h4>name</h4>
  <%= f.text_area :name %>

  <% if @user.email != "guest@example.com" %>
    <h4>email</h4>
    <%= f.text_field :email %>
  <% end %>

  <%= f.submit '保存' %>

<% end %>
<%= link_to '戻る', user_path %>