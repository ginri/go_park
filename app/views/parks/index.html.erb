<h2><%= @prefecture.name %>の公園</h2>
<div class= "row" >
  <div class="col-12">
    <div class="card-columns">
      <% @parks.each do |park| %>
        <div class="card">
            <% if park.image.attached?%>
              <%= image_tag park.image, class: "w-100", height: "350px" %>
            <% else %>
              <%= image_tag "no_image.jpg", class: "w-100", height: "350px" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <p>公園名</p>
                <span>
                  <%= link_to park.name, park%></h5>
                </span>
                <p><%= park.user.name %></p>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to '戻る', root_path %>
